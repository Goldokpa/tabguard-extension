{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["../node_modules/@types", "./types"]
  },
  "include": [
    "background.ts",
    "content.ts",
    "popup/popup.ts",
    "services/**/*.ts",
    "types/**/*.d.ts"
  ]
} 